<body>
  <header class="d-flex col-12 p-0 m-0" style="display: flex; background-color: #FF585B; align-items: center; background-size: cover; background-image: url(/faixa.png);">
    
    <button type="button" onclick="history.go(-1)" class="button-imagem" style="display: flex;">
      <img src="/Seta.png" alt="">
    </button>
</header>

    <div class="d-flex justify-content-center">
  <div class="container">
  <div class="borda">
  <div class="text-justify">
     
        <div class="d-flex justify-content-between faixa-cinza">

          <h1 class="despesas-titulo">Solicitação</h1>

         

        </div>
          <div class="d-flex justify-content-between">
            <div class="registro e buscar">
              <p>Mostrar </p>
              <select class="select">
                <optgroup label="Mostrar">
                
                <option> <li>1</li> </option>
                <option> <li>2</li> </option>
                <option> <li>3</li> </option>
                <option> <li>4</li> </option>

              </optgroup>
              </select>
              <p> registros</p>
            </div>
            <div class="busca">
              <p>Buscar</p> <label> <input type="text" value="Pesquisar..."></label>
            </div>
          </div>
      </div>
      
      
      <div class="table-wrapper">
        <table class="table">
  
        <thead>
           <tr>
              <th scope="col"> Funcionário       <button type="button" class="button-imagem"><img class="ponteiro-sort" src="/icons8-ordenar-50.png" alt=""></button> </th>   
              <th scope="col"> Produto         <button type="button" class="button-imagem"><img class="ponteiro-sort" src="/icons8-ordenar-50.png" alt=""></button> </th>   
              <th scope="col"> Quantidade     <button type="button" class="button-imagem"><img class="ponteiro-sort" src="/icons8-ordenar-50.png" alt=""></button> </th>
              <th scope="col"> Ações        <button type="button" class="button-imagem"><img class="ponteiro-sort" src="/icons8-ordenar-50.png" alt=""></button> </th>
          </tr>
        </thead>
        <tbody>
  
           <!--Botar informações aqui-->
           <% solicitacoes.forEach(solicitacoe => { %>
           <tr style="width: 100%;">
            <td scope="row"> <%= solicitacoe.cpf_funcionario %>              </td>
            <td scope="row"> <%= solicitacoe.nome_produto>   %>               </td>
            <td scope="row"> <%= solicitacoe.quantidade %>               </td>
            <td scope="row" class="acoes"> <button type="button" class="acoes-edit"><img class="edit" src="/edit.png" alt=""></button> <button type="button" class="acoes-delete"><img class="delete" src="/delete.png" alt=""></button></td>
          </tr>
          <% }); %>
        </tbody>
      </table>
    </div>
    <div class="linha"></div>
      <div class="d-flex justify-content-between col-12 listando">
        <p>Listando 1 de  <%= total %> registros</p>
      </div>
    </div>
</div>
  </div>

  

</body>
</html>